<div class="contenedor">
    {{#if cart.products}}
        <div class="sticky">
            <h1>Productos en Carrito</h1>
        </div>
        <div class="contenedorCard">
            {{#each cart.products}}
                <div class="prodCard">
                    <div>
                        <img class="img" class="img" src="../../img/{{this.product.thumbnail}}">
                    </div>
                    <div class="infoCard">
                        <div class="topCard">
                            <h3>{{this.product.title}}</h3>
                            <p>{{this.product.code}}</p>
                        </div>
                        <div class="buttomCard">
                            <div class="cant">
                                <p>Cant: </p>
                                <button class="btnCant">-</button>
                                <p>{{this.quantity}}</p>
                                <button class="btnCant">+</button>
                            </div>
                        </div>
                        <div class="priceCard">
                            <h5>Precio por unidad: ${{this.product.price}}</h5>
                            <p>$ ((Total))</p>
                        </div>
                    </div>
                    <div class="delete">
                        <button class="btn">Borrar</button>
                    </div>
                </div>
            {{/each}}
        </div>

    {{else}}
        <div class="sticky">
            <h2>El carrito esta vacio</h2>
        </div>
    {{/if}}

</div>