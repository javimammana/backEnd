<div class="contenedor">
    {{#if productos}}
    <div class="sticky">
        <h1>Productos</h1>
    </div>
    <div class="contenedorCard">
        {{#each productos}}
        <div class="card">
            <div>
                <img class="img" src="img/{{ this.thumbnail }}">
            </div>
            <h4>{{ title }}</h4>
            <p>{{ this.description }}</p>
            <div class="cardInfo">
                <p>Stock: {{ this.stock }}</p>
                <h5>${{ this.price }} .-</h5>
            </div>
            <button class="btn">Comprar</button>
        </div>
        {{/each}}

        {{else}}
        <h2>No hay productos</h2>
        {{/if}}
    </div>
</div>